{% extends 'base.html.twig' %}

{% block body %}
<h1>Connexion</h1>

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path('security_login') }}" method="post">
    <div class="form-group">
        <input placeholder="Email ..." required name="_username" value="{{lastUsername}}"
        type="text" class="form-control">
    </div>
    <div class="form-group">
        <input placeholder="Password ..." required name="_password"
        type="password" class="form-control">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Connexion</button>
    </div>
</form>

  {% if not app.user %}
      <li class="nav-item">
        <a href="{{ path('security_login')}}" class="nav-link">Connexion</a>
      </li>
  {% else %}
      <li class="nav-item">
        <a href="{{ path('security_logout')}}" class="nav-link">DÃ©connexion</a>
      </li>
  {% endif %}

{% endblock %}